@model DVDRental.Models.Copy

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var movies = (List<Movie>)ViewData["movies"];
}

<h1>Details</h1>

<div>
    <h4>Copy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Copy of</p>
        </dt>
        <dd class = "col-sm-10">
            @movies.Find(m => Model.movieId == m.id).title
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.available)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.available)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
